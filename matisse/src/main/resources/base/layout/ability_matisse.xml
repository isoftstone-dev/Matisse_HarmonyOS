<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$+id:bottombar">

        <ListContainer
            ohos:id="$+id:galley"
            ohos:height="match_parent"
            ohos:width="match_parent"/>

    </ScrollView>
    <DependentLayout
        ohos:id="$+id:bottombar"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:preview"
            ohos:height="match_parent"
            ohos:width="150vp"
            ohos:text_size="17fp"
            ohos:text="预览"
            ohos:background_element="$graphic:color_blue_element"
            />
        <Button
            ohos:id="$+id:use"
            ohos:height="match_parent"
            ohos:width="150vp"
            ohos:align_parent_end="true"
            ohos:text_size="17fp"
            ohos:text="使用"
            ohos:background_element="$graphic:color_blue_element"/>


    </DependentLayout>
</DependentLayout>